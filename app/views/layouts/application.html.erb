    <!-- Manda alerts del control a la vista -->

	<header>
		<nav class="be-red white large-padding">
			<ul class="no-list row center-xs middle-xs">
				
				<li class="col-md">
					<h1 class="no-margin" id="logo">Blog de Jacobo</h1>
				</li>

				<li class="col-md">
					<%= link_to "Inicio", root_path %>
				</li>

				<li class="col-md">
					Diseño
				</li>

				<li class="col-md">
					Programaci&oacuten
				</li>

				<li class="col-md">
					Tecnolog&iacutea
				</li>

				<% if user_signed_in? %>
					<li>
						<%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete %>
					</li>
				<% end %>				

			</ul>
		</nav>
	</header>


<%= yield %>


</body>
</html>
