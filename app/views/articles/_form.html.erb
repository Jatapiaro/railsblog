<!--
	Con la instruccion: "form_for"
	Se crea un formulario para el recurso que nosotros pasemos como parametro
-->

<h1><%= accion %> art&iacuteculo</h1>
<%= form_for(@article) do |f| %>

	<!-- article . erros permite decirnos porque
	no fue valido nuestro submit -->
	<% @article.errors.full_messages.each do |message| %>
		
		<div class="be-red white top-space">
			<%= message %>
		</div>

	<% end %>

	<div class="field">
		Portada: <%= f.file_field :cover %>	
	</div>

	<div class="field">
		<%= f.text_field :title, placeholder: "Título", class:"form-control"%>	
	</div>

	<div class="field">
		<%= f.text_area :body, placeholder: "Escribe tú artículo", style: "height:250px", class:"form-control"%>	 
	</div>

	<div class="field">
		<label>Categorias</label>
		<% @categories.each do |category| %>
			<div>
				<%=check_box_tag "categories[]",category.id%> <%=category.name%>
			</div>
		<%end%>
	</div>

	<div class="field">
		<%= f.submit "Guardar artículo", class: "btn be-red white"%>
	</div>

<%end%>